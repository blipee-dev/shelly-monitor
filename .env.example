# Blipee OS Environment Variables Template
# Copy this file to .env.local for local development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Security Keys (Generate using: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret
SESSION_SECRET=your-session-secret
ENCRYPTION_KEY=your-32-byte-encryption-key
CRON_SECRET=your-cron-secret

# AI Provider (Choose one or more)
# DeepSeek (Recommended for cost-effectiveness)
DEEPSEEK_API_KEY=your-deepseek-api-key

# OpenAI (Alternative)
# OPENAI_API_KEY=your-openai-api-key

# Anthropic (Alternative)
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Push Notifications (Optional)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@yourdomain.com

# Feature Flags (Development)
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true
NEXT_PUBLIC_ENABLE_EXPORTS=true
NEXT_PUBLIC_SHOW_PREVIEW_BANNER=false

# Analytics (Optional)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking (Optional)
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
# SENTRY_AUTH_TOKEN=your-sentry-auth-token
# SENTRY_ORG=your-org
# SENTRY_PROJECT=blipee-os

# External Services (Optional)
# LOGTAIL_TOKEN=your-logtail-token
# DATADOG_API_KEY=your-datadog-api-key

# SMS Notifications (Optional)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# External Integrations (Optional)
# IFTTT_KEY=your-ifttt-key
# HOME_ASSISTANT_TOKEN=your-home-assistant-token
# HOME_ASSISTANT_URL=http://homeassistant.local:8123